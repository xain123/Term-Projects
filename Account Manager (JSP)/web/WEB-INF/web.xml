<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
        <init-param>
            <param-name>URL</param-name>
            <param-value>jdbc:mysql://localhost:3306/</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>SignupServlet</servlet-class>
        <init-param>
            <param-name>URL</param-name>
            <param-value>jdbc:mysql://localhost:3306/</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>createReceivableServlet</servlet-name>
        <servlet-class>createReceivableServlet</servlet-class>
        <init-param>
            <param-name>URL</param-name>
            <param-value>jdbc:mysql://localhost:3306/</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CreatePayableServlet</servlet-name>
        <servlet-class>CreatePayableServlet</servlet-class>
        <init-param>
            <param-name>URL</param-name>
            <param-value>jdbc:mysql://localhost:3306/</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>getid</servlet-name>
        <servlet-class>getid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createReceivableServlet</servlet-name>
        <url-pattern>/createReceivableServlet</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>db</param-name>
        <param-value>ams</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>CreatePayableServlet</servlet-name>
        <url-pattern>/CreatePayableServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getid</servlet-name>
        <url-pattern>/getid</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
